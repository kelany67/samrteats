<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicalhistoryActivity"
    android:background="@drawable/dowlo"
    >
    <TextView
        android:id="@+id/medicalhistory"
        android:text=" Your Medical History "
        android:textSize="50dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/question3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="do you have any health issue ?"
        app:layout_constraintTop_toBottomOf="@+id/medicalhistory"
        app:layout_constraintEnd_toEndOf="@id/medicalhistory"
        app:layout_constraintStart_toStartOf="@id/medicalhistory"
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blood pressure (hypertension)"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/question3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/HeartDisease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cardiovascular "
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/pressure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Diabetes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diabetes"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/HeartDisease"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/obesity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="obesity"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Diabetes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />

        <Button
        android:id="@+id/Excessivethinness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excessive thinness"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/obesity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Genetrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genetrating your progrom "
        android:textSize="20dp"
        android:background="@color/black"
        android:layout_margin="90dp"
        app:layout_constraintTop_toBottomOf="@+id/Excessivethinness"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>