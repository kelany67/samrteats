<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgramActivity"
    android:background="@drawable/dowlo"
    >
  <SeekBar
  android:id="@+id/seekbar"
  android:layout_width="0dp"
  android:layout_height="wrap_content"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintTop_toBottomOf="@id/nutrition"
  android:progress="0" />

  <TextView
    android:id="@+id/nutrition"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:text="Here is your nutrition plan for the week"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:textSize="20dp"
    android:textColor="@color/white"
    android:textStyle="bold"
       />

  <TextView
      android:id="@+id/breakfast"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="40dp"
      android:text="Breakfast"
      android:textSize="25dp"
      android:textColor="@color/white"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      tools:ignore="MissingConstraints"
     />
  <TextView
      android:id="@+id/calories"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="20dp"
      android:text="123Kcal"
      android:textSize="25dp"
      android:textColor="@color/white"
      android:paddingLeft="10dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/breakfast"
      tools:ignore="MissingConstraints"
       />
  <CheckBox
      android:id="@+id/checkbox1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:checked="false"
      android:text="Banana and peanut Butter"
      tools:ignore="MissingConstraints"
      app:layout_constraintTop_toBottomOf="@id/calories"
      android:paddingTop="7dp"
      android:textColor="@color/white"
      android:textSize="20dp"
      android:textStyle="normal"
      />

  <TextView
      android:id="@+id/lunch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="20dp"
      android:text="lunch"
      android:textSize="25dp"
      android:textColor="@color/white"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/checkbox1"
      tools:ignore="MissingConstraints"
      />
  <TextView
      android:id="@+id/calories2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="20dp"
      android:text="345Kcal"
      android:textSize="25dp"
      android:textColor="@color/white"
      android:paddingLeft="10dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/lunch"
      tools:ignore="MissingConstraints"
      />
  <CheckBox
      android:id="@+id/checkbox2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:checked="false"
      android:text="Extreme protein shake "
      tools:ignore="MissingConstraints"
      app:layout_constraintTop_toBottomOf="@id/calories2"
      android:paddingTop="7dp"
      android:textColor="@color/white"
      android:textSize="20dp"
      android:textStyle="normal"
      />

  <TextView
      android:id="@+id/Dinner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="20dp"
      android:text="Dinner"
      android:textSize="25dp"
      android:textColor="@color/white"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/checkbox2"
      tools:ignore="MissingConstraints"
      />
  <TextView
      android:id="@+id/calories3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="20dp"
      android:text="345Kcal"
      android:textSize="25dp"
      android:textColor="@color/white"
      android:paddingLeft="10dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/Dinner"
      tools:ignore="MissingConstraints"
      />
  <CheckBox
      android:id="@+id/checkbox3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:checked="false"
      android:text="Grilled salmon Burger patties"
      tools:ignore="MissingConstraints"
      app:layout_constraintTop_toBottomOf="@id/calories3"
      android:paddingTop="7dp"
      android:textColor="@color/white"
      android:textSize="20dp"
      android:textStyle="normal"
      />
</androidx.constraintlayout.widget.ConstraintLayout>